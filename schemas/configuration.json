{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "urn:sourcemeta:registry/configuration.json",
  "type": "object",
  "required": [
    "url",
    "port",
    "collections"
  ],
  "properties": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "collections": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": [
          "base",
          "path"
        ],
        "properties": {
          "base": {
            "type": "string",
            "format": "url"
          },
          "path": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    },
    "port": {
      "type": "integer",
      "minimum": 0
    },
    "url": {
      "type": "string",
      "format": "url"
    }
  },
  "additionalProperties": false
}
